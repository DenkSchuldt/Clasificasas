<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button android:id="@+id/usuario_buscar"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/buttom"
                android:text="@string/home_buscar"
                android:textSize="@dimen/text"
                android:textColor="@color/btext"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Casas publicadas:"
                android:layout_marginTop="30dip"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>

            <LinearLayout
                android:id="@+id/usuario_publicadas_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/usuario_favoritas_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Casas favoritas:"
                android:layout_marginTop="30dip"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>

            <LinearLayout
                android:id="@+id/usuario_favoritas_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <Button android:id="@+id/usuario_publicar"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:background="@drawable/buttom"
                android:layout_marginTop="30dip"
                android:text="@string/usuario_publicar"
                android:textColor="@color/btext"
                android:textSize="@dimen/text"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>