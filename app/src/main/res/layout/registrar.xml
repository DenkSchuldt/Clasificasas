<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/registrar_imageView1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:src="@drawable/user" />
    <EditText
        android:id="@+id/registrar_nombres"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_nombres"
        android:layout_marginLeft="60dip"
        android:inputType="text" />

    <ImageView
        android:id="@+id/registrar_imageView2"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="60dip"
        android:src="@drawable/user" />
    <EditText
        android:id="@+id/registrar_apellidos"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_apellidos"
        android:layout_marginTop="60dip"
        android:layout_marginLeft="60dip"
        android:inputType="text" />

    <ImageView
        android:id="@+id/registrar_imageView3"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="120dip"
        android:src="@drawable/telf" />
    <EditText
        android:id="@+id/registrar_movil"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_movil"
        android:layout_marginTop="120dip"
        android:layout_marginLeft="60dip"
        android:inputType="numberDecimal"/>

    <ImageView
        android:id="@+id/registrar_imageView4"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="180dip"
        android:src="@drawable/email" />
    <EditText
        android:id="@+id/registrar_correo"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_correo"
        android:layout_marginTop="180dip"
        android:layout_marginLeft="60dip"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/registrar_imageView5"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="240dip"
        android:src="@drawable/user" />
    <EditText
        android:id="@+id/registrar_usuario"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_usuario"
        android:layout_marginTop="240dip"
        android:layout_marginLeft="60dip"
        android:inputType="text" />

    <ImageView
        android:id="@+id/registrar_imageView6"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="300dip"
        android:src="@drawable/passwd" />
    <EditText
        android:id="@+id/registrar_contrasena"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_contrasena"
        android:layout_marginTop="300dip"
        android:layout_marginLeft="60dip"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/registrar_imageView7"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="360dip"
        android:src="@drawable/user" />
    <EditText
        android:id="@+id/registrar_confirmar"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/registrar_confirmar"
        android:layout_marginTop="360dip"
        android:layout_marginLeft="60dip"
        android:inputType="textPassword"/>

    <Button android:id="@+id/registrar_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrar"
        android:layout_marginTop="440dip"/>

</RelativeLayout>