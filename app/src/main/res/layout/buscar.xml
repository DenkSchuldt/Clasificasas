<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/buscar_in_ciudad_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40dip"/>
    <Spinner
        android:id="@+id/buscar_in_ciudad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/buscar_ciudad"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/buscar_in_tipo_casa_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:textSize="40dip"/>
    <Spinner
        android:id="@+id/buscar_in_tipo_casa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/buscar_tipo_casa"
        android:layout_marginTop="70dip"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_texto"
        android:layout_marginTop="140dip"
        android:textSize="30dp"/>

    <SeekBar
        android:id="@+id/buscar_in_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dip"
        android:progress="50"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_min"
        android:layout_marginTop="230dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_max"
        android:layout_marginLeft="260dip"
        android:layout_marginTop="230dip"/>

    <EditText
        android:id="@+id/buscar_presupuesto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_presupuesto"
        android:gravity="center"
        android:layout_marginTop="300dip"
        android:textSize="55dp"
        android:inputType="numberDecimal"/>

    <Button android:id="@+id/buscar_in_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_buscar"
        android:layout_marginTop="440dip"/>

</RelativeLayout>