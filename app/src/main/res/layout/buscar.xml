<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="@string/buscar_ciudad"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>
            <Spinner
                android:id="@+id/buscar_in_ciudad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/buscar_ciudad"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-28dp"
                android:textColor="@color/text"/>

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:text="@string/buscar_tipo_casa"
                android:layout_marginTop="20dip"
                android:gravity="end"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>
            <Spinner
                android:id="@+id/buscar_in_tipo_casa"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/buscar_tipo_casa"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-28dp"
                android:textSize="40dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buscar_presupuesto_label"
                android:layout_marginTop="20dip"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>
            <SeekBar
                android:id="@+id/buscar_in_seek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:progress="50"/>
            <TextView
                android:id="@+id/buscar_min_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buscar_max"
                android:textSize="@dimen/text"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/buscar_max_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/text"
                android:layout_marginTop="-28dip"
                android:textColor="@color/text"/>

            <EditText
                android:id="@+id/buscar_presupuesto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="55dp"
                android:layout_marginTop="20dip"
                android:inputType="numberDecimal"
                android:textColor="@color/text"/>

            <Button android:id="@+id/buscar_in_btn"
                android:layout_width="fill_parent"
                android:layout_height="49dp"
                android:text="@string/buscar_buscar"
                android:layout_marginTop="130dip"
                android:background="@drawable/buttom"
                android:textColor="@color/btext"
                android:textSize="@dimen/text"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>