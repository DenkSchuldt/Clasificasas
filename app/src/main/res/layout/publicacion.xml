<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".main$PlaceholderFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_costo"/>
            <ImageView
                android:id="@+id/publicacion_borrar"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="end"
                android:layout_marginTop="-40dip"
                android:src="@drawable/ic_action_delete"/>
            <ImageView
                android:id="@+id/publicacion_portada"
                android:layout_width="fill_parent"
                android:layout_height="170dip"
                android:scaleType="fitXY"
                android:layout_marginTop="2dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_ubicacion" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_cuartos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="-26dip"
                android:layout_marginLeft="180dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_banos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_pisos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_terreno" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:id="@+id/publicacion_construccion" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:text="DescripciÃ³n:"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"/>
            <com.ihm.clasificasas.clasificasas.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginLeft="5dip"
                android:textColor="@color/text"
                android:id="@+id/publicacion_descripcion" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
