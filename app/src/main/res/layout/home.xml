<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".main$PlaceholderFragment">
    <Button android:id="@+id/home_buscar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_buscar"
        android:background="@color/button"
        android:textColor="@color/btext"/>
    <ImageView
        android:id="@+id/home_imageView1"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="150dip"
        android:src="@drawable/user" />
    <EditText
        android:id="@+id/home_user"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/home_usuario"
        android:layout_marginTop="150dip"
        android:layout_marginLeft="60dip"
        android:textColor="@color/text"
        android:inputType="text" />
    <ImageView
        android:id="@+id/home_imageView2"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="210dip"
        android:src="@drawable/passwd" />
    <EditText
        android:id="@+id/home_password"
        android:layout_width="270dip"
        android:layout_height="60dip"
        android:hint="@string/home_contrasena"
        android:layout_marginTop="210dip"
        android:layout_marginLeft="60dip"
        android:textColor="@color/text"
        android:inputType="textPassword"/>
    <Button android:id="@+id/home_ingresar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_ingresar"
        android:layout_marginTop="280dip"
        android:background="@color/button"
        android:textColor="@color/btext"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="460dip"
        android:background="@android:color/darker_gray"/>
    <Button android:id="@+id/home_registrar"
        android:layout_width="fill_parent"
        android:background="@null"
        android:layout_height="wrap_content"
        android:text="@string/home_registrarme"
        android:textColor="@color/text"
        android:layout_marginTop="465dip"/>
</RelativeLayout>
