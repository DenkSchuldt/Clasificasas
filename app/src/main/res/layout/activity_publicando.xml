<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ihm.clasificasas.clasificasas.publicando">

    <TextView
        android:text="Elija una ubicacion:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        />
    <TextView
        android:text="Informacion:"
        android:layout_marginTop="230dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView6" />
    <TextView
        android:text="Costo($):"
        android:layout_marginTop="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView3" />
    <TextView
        android:text="Cuartos:"
        android:layout_marginTop="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView" />
    <TextView
        android:text="Pisos:"
        android:layout_marginTop="360dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView2" />
    <TextView
        android:text="Terreno(m²):"
        android:layout_marginTop="390dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView7"
        />
    <TextView
        android:text="Construccion(m²):"
        android:layout_marginTop="420dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView4" />
    <TextView
        android:text="Baños:"
        android:layout_marginTop="330dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView5" />
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_height="170dp"
        android:layout_width="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />
    <Button android:id="@+id/usuario_publicar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/usuario_publicar"
        android:layout_marginTop="440dip"/>

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/editText"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignTop="@+id/textView3"/>

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignTop="@+id/textView" />

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignTop="@+id/textView5" />

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignTop="@+id/textView2" />

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/editText6"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignTop="@+id/textView7" />

    <EditText
        android:layout_marginTop="-15dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:textSize="20dp"
        android:id="@+id/editText7"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignTop="@+id/textView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/home_buscar"
        android:layout_alignLeft="@+id/home_buscar"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Imagen"
        android:textSize="23dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/home_buscar" />


</RelativeLayout>
