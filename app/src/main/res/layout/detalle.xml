<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context=".main$PlaceholderFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtcosto"/>
            <ImageView
                android:id="@+id/detalle_fav_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="end"
                android:layout_marginTop="-40dip"
                android:src="@drawable/ic_action_star"/>
            <ImageView
                android:id="@+id/detalle_portada"
                android:layout_width="fill_parent"
                android:layout_height="170dip"
                android:scaleType="fitXY"
                android:layout_marginTop="2dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtdireccion" />
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map_detalle"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtcuartos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="-26dip"
                android:layout_marginLeft="180dip"
                android:textColor="@color/text"
                android:id="@+id/txtbanos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtpisos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtterreno" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:id="@+id/txtcons" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:text="Descripción:"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"/>
            <com.ihm.clasificasas.clasificasas.TextViewEx
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginLeft="5dip"
                android:textColor="@color/text"
                android:id="@+id/txtdes" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"
                android:id="@+id/txtusu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Móvil:"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/txtmobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="-23dip"
                android:layout_marginLeft="60dip"
                android:textColor="@color/text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:textSize="@dimen/text"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"
                android:textColor="@color/text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:layout_marginTop="-23dip"
                android:layout_marginLeft="70dip"
                android:textColor="@color/text"
                android:id="@+id/txtmail"/>
            <ImageView
                android:id="@+id/detalle_phone_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:layout_marginRight="30dip"
                android:src="@drawable/ic_action_call"/>
            <ImageView
                android:id="@+id/detalle_email_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_marginTop="-50dip"
                android:layout_marginLeft="30dip"
                android:src="@drawable/ic_action_mail"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
