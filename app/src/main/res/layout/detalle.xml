<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main$PlaceholderFragment">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="$200,000"
                android:textSize="25dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"/>
            <ImageButton
                android:id="@+id/detalle_upload_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="end"
                android:layout_marginTop="-40dip"
                android:src="@drawable/star"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="170dip"
                android:src="@drawable/house"
                android:scaleType="fitXY"
                android:layout_marginTop="2dip"/>
            <ImageButton
                android:id="@+id/detalle_more_photos"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="end"
                android:layout_marginTop="-50dip"
                android:src="@drawable/more"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación: Samanes 3"
                android:textSize="22dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"/>
            <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_height="120dp"
                android:layout_width="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                />-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuartos: 4"
                android:textSize="22dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baños: 4"
                android:textSize="22dip"
                android:layout_marginTop="-26dip"
                android:layout_marginLeft="180dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pisos: 2"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terreno: 20 m&lt;sup&gt;2/sup&gt;"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construcción: 15 m&lt;sup&gt;2/sup&gt;"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum es simplemente el textos de relleno las imprenta Lorem Ipsum es simplemente el textos de relleno las imprenta Lorem Ipsum es simplemente el textos de relleno las imprenta..."
                android:textSize="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dip"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendedor: Liliana Ramos"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Móvil:"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:id="@+id/detalle_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0988569184"
                android:textSize="22dip"
                android:layout_marginTop="-30dip"
                android:layout_marginLeft="75dip"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:"
                android:textSize="22dip"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="10dip"/>
            <TextView
                android:id="@+id/detalle_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dschuldt@outlook.com"
                android:textSize="22dip"
                android:layout_marginTop="-30dip"
                android:layout_marginLeft="90dip"/>
            <ImageButton
                android:id="@+id/detalle_phone_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:layout_marginRight="30dip"
                android:src="@drawable/phone"/>
            <ImageButton
                android:id="@+id/detalle_email_button"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center"
                android:layout_marginTop="-50dip"
                android:layout_marginLeft="30dip"
                android:src="@drawable/email"/>
            <Button android:id="@+id/detalle_mas_informacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:layout_marginTop="5dip"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
